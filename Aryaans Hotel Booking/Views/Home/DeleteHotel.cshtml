@model Aryaans_Hotel_Booking.Data.Entities.Hotel

@{
    ViewData["Title"] = "Delete Hotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .auth-page-body {
        background-color: #121212;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding-top: 80px;
        padding-bottom: 40px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #e0e0e0;
    }

    .auth-container {
        background-color: #1e1e1e;
        padding: 30px 40px;
        border-radius: 8px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
        width: 100%;
        max-width: 600px; 
        border: 1px solid #333;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 25px;
        color: #ffffff;
        font-size: 2rem;
        font-weight: 300;
    }

    .details-section dt {
        color: #b0b0b0;
        font-weight: 500;
    }

    .details-section dd {
        color: #e0e0e0;
        margin-bottom: 0.75rem;
    }

    .btn-danger-custom {
        background: linear-gradient(145deg, #dc3545, #c82333);
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(220, 53, 69, 0.2);
    }

        .btn-danger-custom:hover, .btn-danger-custom:focus {
            background: linear-gradient(145deg, #c82333, #bd2130);
            box-shadow: 0 6px 15px rgba(220, 53, 69, 0.3);
            transform: translateY(-2px);
            outline: none;
        }

    .btn-secondary-custom {
        background-color: #495057;
        border-color: #495057;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-secondary-custom:hover {
            background-color: #3A3F44;
            border-color: #3A3F44;
        }

    .action-buttons {
        margin-top: 25px;
        display: flex;
        justify-content: space-between;
    }
</style>

<div class="auth-page-body">
    <div class="auth-container">
        <h3 class="auth-header">Confirm Deletion</h3>
        <h4 style="color: #ffc107; text-align:center; margin-bottom:20px;">Are you sure you want to delete this hotel?</h4>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        <div>
            <h5 style="color: #ffffff; margin-bottom: 15px;">Hotel Details:</h5>
            <hr style="border-top: 1px solid #444; margin-bottom:15px;" />
            <dl class="row details-section">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.StarRating)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.StarRating) Star(s)
                </dd>
            </dl>
            <hr style="border-top: 1px solid #444; margin-top:15px;" />
        </div>

        <form asp-action="DeleteHotel" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="action-buttons">
                <input type="submit" value="Delete" class="btn btn-danger-custom" />
                <a asp-action="Index" class="btn btn-secondary-custom">Cancel & Back to Home</a>
            </div>
        </form>
    </div>
</div>