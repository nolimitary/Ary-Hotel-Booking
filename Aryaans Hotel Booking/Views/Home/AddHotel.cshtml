@{
    ViewData["Title"] = "Add New Hotel";
}

<link rel="stylesheet" href="~/css/add-hotel.css" />

<div class="container add-hotel-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="AddHotel" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken() <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="Name" class="control-label">Hotel Name</label>
            <input type="text" name="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Country" class="control-label">Country</label>
            <input type="text" name="Country" class="form-control" />
        </div>

        <div class="form-group">
            <label for="City" class="control-label">City</label>
            <input type="text" name="City" class="form-control" />
        </div>

        <div class="form-group">
            <label for="StarRating" class="control-label">Star Rating (1-5)</label>
            <input type="number" name="StarRating" class="form-control" min="1" max="5" />
        </div>

        <div class="form-group">
            <label for="PricePerNight" class="control-label">Price Per Night</label>
            <input type="number" name="PricePerNight" class="form-control" step="0.01" />
        </div>

        <div class="form-group">
            <label for="ReviewScore" class="control-label">Review Score (0.0-10.0)</label>
            <input type="number" name="ReviewScore" class="form-control" step="0.1" min="0" max="10" />
        </div>

        <div class="form-group">
            <label for="Image" class="control-label">Hotel Image</label>
            <input type="file" name="Image" class="form-control-file" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Hotel</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
