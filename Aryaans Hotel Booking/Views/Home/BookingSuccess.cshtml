@model Aryaans_Hotel_Booking.Models.BookingSuccessViewModel
@{
    ViewData["Title"] = "Booking Confirmed!";
}

<style>
    .confetti-container {
        position: fixed; /* Changed from absolute to fixed to cover viewport */
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; /* Allows clicks to go through to elements behind it */
        z-index: 9999; /* Ensure it's on top */
        overflow: hidden; /* Prevent scrollbars if confetti goes out of bounds slightly */
    }

    .success-message-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 70vh; /* Adjust as needed */
        text-align: center;
        padding: 20px;
        color: var(--ahb-light-text); /* Uses your theme's light text color */
    }

    .success-icon {
        font-size: 5rem;
        color: #28a745; /* Green for success */
        margin-bottom: 20px;
        animation: popIn 0.5s ease-out;
    }

    .success-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--ahb-primary-color); /* Uses your theme's primary color */
        margin-bottom: 15px;
        animation: fadeInDown 0.6s ease-out 0.2s backwards;
    }

    .success-text {
        font-size: 1.2rem;
        margin-bottom: 10px;
        color: var(--ahb-muted-text);
        animation: fadeInUp 0.6s ease-out 0.4s backwards;
    }
    .success-text strong {
        color: var(--ahb-light-text);
    }

    .success-actions {
        margin-top: 30px;
        animation: fadeInUp 0.6s ease-out 0.6s backwards;
    }

    .success-actions .btn {
        margin: 0 10px;
        padding: 10px 25px;
        font-size: 1.1rem;
        background-color: var(--ahb-primary-color);
        color: var(--ahb-dark-bg);
        border: none;
    }
     .success-actions .btn-outline {
        background-color: transparent;
        color: var(--ahb-primary-color);
        border: 2px solid var(--ahb-primary-color);
    }
    .success-actions .btn-outline:hover {
        background-color: var(--ahb-primary-color);
        color: var(--ahb-dark-bg);
    }


    @* Keyframe animations *@
    @@keyframes popIn {
        0% { transform: scale(0.5); opacity: 0; }
        80% { transform: scale(1.1); opacity: 1; }
        100% { transform: scale(1); }
    }
    @@keyframes fadeInDown {
        0% { opacity: 0; transform: translateY(-20px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    @@keyframes fadeInUp {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }

</style>

<div class="confetti-container">
    <canvas id="confetti-canvas"></canvas>
</div>

<div class="success-message-container">
    <div class="success-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </svg>
    </div>
    <h1 class="success-title">Congratulations, @Model.GuestFullName!</h1>

    @if (!string.IsNullOrEmpty(Model.HotelName))
    {
        <p class="success-text">Your booking for <strong>@Model.HotelName</strong> has been successfully confirmed.</p>
    }
    else
    {
        <p class="success-text">Your booking has been successfully confirmed.</p>
    }
    
    <p class="success-text">You will receive an email shortly with all the details of your reservation.</p>
    <p class="success-text" style="font-size: 1rem; color: var(--ahb-accent-color);">Booking Reference (Simulated): AHB-@DateTime.Now.ToString("yyMMddHHmmss")</p>


    <div class="success-actions">
        <a asp-controller="Home" asp-action="Index" class="btn">Go to Homepage</a>
        <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-outline">View My Bookings</a> @* Assuming you have this page *@
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.2/dist/confetti.browser.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const canvas = document.getElementById('confetti-canvas');
            const myConfetti = confetti.create(canvas, {
                resize: true,
                useWorker: true
            });

            function launchConfetti() {
                // A burst from the center
                myConfetti({
                    particleCount: 150,
                    spread: 100,
                    origin: { y: 0.6 },
                    decay: 0.92,
                    scalar: 1.2,
                    shapes: ['star', 'circle'],
                    colors: ['#f0ad4e', '#e74c3c', '#3498db', '#2ecc71', '#ffffff'] // Theme colors + white
                });

                // And a few more bursts for good measure
                setTimeout(() => myConfetti({ particleCount: 70, angle: 60, spread: 55, origin: { x: 0 } }), 200);
                setTimeout(() => myConfetti({ particleCount: 70, angle: 120, spread: 55, origin: { x: 1 } }), 200);
            }

            // Launch confetti immediately
            launchConfetti();

            // Optional: Launch confetti again after a short delay for a prolonged effect
            // setTimeout(launchConfetti, 1500); 
        });
    </script>
}
