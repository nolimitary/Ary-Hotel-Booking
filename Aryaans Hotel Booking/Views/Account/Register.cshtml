@model Aryaans_Hotel_Booking.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .auth-page-body {
        background-color: #121212;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding-top: 80px;
        padding-bottom: 40px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #e0e0e0;
    }

    .auth-container {
        background-color: #1e1e1e;
        padding: 30px 40px;
        border-radius: 8px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
        width: 100%;
        max-width: 450px;
        border: 1px solid #333;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 25px;
        color: #ffffff;
        font-size: 2rem;
        font-weight: 300;
    }

    .form-label {
        color: #b0b0b0;
        font-size: 0.9rem;
        margin-bottom: .3rem; /* Added for a bit more space */
    }

    .form-control {
        background-color: #2c2c2c;
        color: #e0e0e0;
        border: 1px solid #444;
        border-radius: 5px;
        padding: 12px 15px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            background-color: #333333;
            color: #ffffff;
        }

        .form-control::placeholder {
            color: #777;
        }

    .btn-submit-auth {
        background: linear-gradient(145deg, #007bff, #0056b3);
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 1.1rem;
        font-weight: 500;
        border-radius: 5px;
        transition: all 0.3s ease;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 123, 255, 0.2);
        margin-top: 10px;
    }

        .btn-submit-auth:hover, .btn-submit-auth:focus {
            background: linear-gradient(145deg, #0069d9, #004085);
            box-shadow: 0 6px 15px rgba(0, 123, 255, 0.3);
            transform: translateY(-2px);
            outline: none;
        }

    .form-check-input {
        background-color: #2c2c2c;
        border: 1px solid #555;
    }

        .form-check-input:checked {
            background-color: #007bff;
            border-color: #007bff;
        }

    .form-check-label {
        font-size: 0.9rem;
        color: #b0b0b0;
        padding-left: 5px;
    }

    .extra-links {
        text-align: center;
        margin-top: 25px;
    }

        .extra-links p {
            margin-bottom: 10px;
            font-size: 0.9rem;
            color: #a0a0a0;
        }

        .extra-links a {
            color: #00aaff;
            text-decoration: none;
            font-weight: 500;
        }

            .extra-links a:hover {
                text-decoration: underline;
                color: #33ceff;
            }

    .text-danger {
        font-size: 0.85rem; 
    }

    .validation-summary-errors ul { 
        list-style-type: none;
        padding-left: 0;
        margin-top: 10px;
    }

    .validation-summary-errors li { 
        font-size: 0.85rem;
        padding: 5px;
        background-color: rgba(220, 53, 69, 0.1);
        border-left: 3px solid #dc3545;
        margin-bottom: 5px;
        border-radius: 3px;
        color: #dc3545; 
    }
</style>

<div class="auth-page-body">
    <div class="auth-container">
        <h2 class="auth-header">Create Account</h2>
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="your@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-submit-auth">Register</button>
        </form>
        <div class="extra-links">
            <p>Already have an account? <a asp-controller="Account" asp-action="Login">Login here</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}