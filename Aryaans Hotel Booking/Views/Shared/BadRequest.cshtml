@model Aryaans_Hotel_Booking.Models.ErrorViewModel
@{
    ViewData["Title"] = "Bad Request";
    Layout = "_Layout"; 
}

<style>
    .error-page-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 70vh;
        text-align: center;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .error-visual {
        font-size: 4rem;
        margin-bottom: 20px;
        color: #ffc107; 
        animation: wiggle 2s infinite;
        display: inline-block; 
    }

    @@keyframes wiggle {
        0%, 7%, 100% {
            transform: rotateZ(0);
        }

        15% {
            transform: rotateZ(-8deg);
        }

        20% {
            transform: rotateZ(6deg);
        }

        25% {
            transform: rotateZ(-6deg);
        }

        30% {
            transform: rotateZ(4deg);
        }

        35% {
            transform: rotateZ(-2deg);
        }
    }

    .error-code {
        font-size: 5rem;
        font-weight: bold;
        color: #e74c3c; 
    }

    .error-page-container h2 {
        font-size: 1.8rem;
        margin-top: 0;
        margin-bottom: 10px;
    }

    .error-page-container p {
        font-size: 1rem;
        color: #555;
        max-width: 450px;
        margin-bottom: 25px;
    }

    .error-page-container .btn-home {
        background-color: #74e5b2; 
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .error-page-container .btn-home:hover {
            background-color: #5fcaa1; 
            color: #fff;
        }
</style>

<div class="error-page-container">
    <div class="error-visual" title="Confused Symbols">?!#%</div>
    <div class="error-code">@Model.StatusCode</div>
    <h2>@ViewData["Title"]</h2>
    <p>@Model.Message</p>
    <a asp-controller="Home" asp-action="Index" class="btn-home">Go to Homepage</a>
    @if (Model.ShowRequestId)
    {
        <p class="text-muted small mt-3">Request ID: @Model.RequestId</p>
    }
</div>  