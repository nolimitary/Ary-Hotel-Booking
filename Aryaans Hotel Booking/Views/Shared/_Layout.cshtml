@using Microsoft.AspNetCore.Identity
@using Aryaans_Hotel_Booking.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var userIsLoggedIn = SignInManager.IsSignedIn(User);
    var userIsAdmin = userIsLoggedIn && User.IsInRole("Admin");
    var currentUserName = userIsLoggedIn ? User.Identity.Name : null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aryaan's Hotel Booking</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/luxury-layout.css" asp-append-version="true" />


    @RenderSection("Styles", required: false)

    <style>
        .navbar-nav .nav-item .nav-link.admin-welcome {
            color: #f0ad4e !important;
            font-weight: bold !important;
        }

        .dropdown-menu-dark .dropdown-item:hover,
        .dropdown-menu-dark .dropdown-item:focus {
            background-color: rgba(255, 255, 255, 0.15);
            color: #fff;
        }

        .ahb-main-container {
            padding-top: 70px;
        }
    </style>
</head>
<body class="ahb-dark-theme">
    <header>
        <nav class="ahb-navbar navbar navbar-expand-lg fixed-top">
            <div class="container-fluid px-4">
                <a class="navbar-brand ahb-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="logo-main">AHB</span>
                    <span class="logo-sub">Aryaan’s Hotel Booking</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                    <ul class="navbar-nav align-items-lg-center">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="SearchResults">Browse Hotels</a>
                        </li>

                        @if (userIsLoggedIn)
                        {
                            if (userIsAdmin)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle admin-welcome" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin Menu
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="UserManagement" asp-action="Index">Manage Users</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AddHotel">Add Hotel</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutFormAdmin" class="d-inline">
                                                <button type="submit" class="dropdown-item">Logout (@currentUserName)</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Hello, @currentUserName
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Booking" asp-action="MyBookings">My Bookings</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">My Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutFormUser" class="d-inline">
                                                <button type="submit" class="dropdown-item">Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="ahb-main-container">
        <main class="ahb-main" role="main">

            @if (TempData["UserMessage"] != null)
            {
                var messageType = TempData["MessageType"]?.ToString() ?? "info";
                <div class="alert alert-@messageType alert-dismissible fade show mt-3" role="alert">
                    @TempData["UserMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="ahb-footer text-center">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year Aryaan’s Hotel Booking · <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
