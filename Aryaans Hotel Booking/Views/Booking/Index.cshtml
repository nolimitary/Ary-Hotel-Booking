@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2 class="text-center mb-4" style="color: #e0e0e0;">@ViewData["Title"]</h2>

            <div class="alert alert-info" role="alert" style="background-color: #1e1e1e; border-color: #333; color: #e0e0e0;">
                <h4 class="alert-heading">Coming Soon!</h4>
                <p>This page will display your hotel bookings. Functionality to list and manage bookings is currently under development.</p>
                <hr style="border-top: 1px solid #444;">
                <p class="mb-0">Please check back later for updates.</p>
            </div>

            
            <div class="card mt-4" style="background-color: #1e1e1e; border: 1px solid #333;">
                <div class="card-header" style="background-color: #2c2c2c; color: #e0e0e0;">
                    Booking #12345
                </div>
                <div class="card-body" style="color: #c0c0c0;">
                    <h5 class="card-title" style="color: #ffffff;">Grand Hyatt - Deluxe King</h5>
                    <p class="card-text"><strong>Check-in:</strong> 2025-07-15</p>
                    <p class="card-text"><strong>Check-out:</strong> 2025-07-20</p>
                    <p class="card-text"><strong>Guests:</strong> 2</p>
                    <a href="#" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">View Details</a>
                </div>
            </div>
            
        </div>
    </div>
</div>

